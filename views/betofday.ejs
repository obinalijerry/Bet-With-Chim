<% layout('layouts/boilerplate') %>
<div class="container mx-auto my-10">
    <h1 class="text-3xl text-center my-4 font-bold text-pri">BET OF THE DAY</h1>
    <% if(currentUser){ %>
        <section class="main-head" id="main">
          <% if(user.gender === 'man'){ %>
              <div class="male" id="male-container">
                  <img src="/img/icons8-user-male-30.png" alt="" />
                  <div class="male-title">
                    <p class="text-xs"><%= user.username %></p>
                    <small><%= user.email %></small>
                  </div>
              </div>
          <% } else{%>    
              <div class="female" id="female-container">
                  <img src="/img/icons8-female-profile-50.png" alt="" />
                  <div class="female-title">
                    <p><%= user.username %></p>
                    <small><%= user.email %></span></small>
                  </div>
              </div>
          <% } %>    
        </section>
      <% } %>
    <table
    class="table-auto shadow-md transition duration-200 hover:shadow-2xl border mx-auto it border-gray-400 px-4 px-4 h-80 w-1/2"
    >
        <thead class="border border-gray-400 rounded-2xl">
        <tr class="py-4">
            <th class="py-4 px-2 pr-7 mx-auto">Teams</th>
            <th class="flex justify-start py-6">Selection</th>
            <th class="px-4 pr-6 text-center">Odds</th>
        </tr>
        </thead>
        <tbody class="border border-gray-400 px-6">
        <tr class="border border-gray-400">
            <td class="px-4">Juventus vs Nantes</td>
            <td class="px-4">Home win</td>
            <td class="px-4">1.42</td>
        </tr>
        <tr class="border border-gray-400">
            <td class="px-4">Sporting Cp vs Midtylland</td>
            <td class="px-4">Home</td>
            <td class="px-4">1.36</td>
        </tr>
        <tr>
            <td class="px-4">Lazio vs CFR Cluj</td>
            <td class="px-4">Over 2.5 match goals</td>
            <td class="px-4">1.54</td>
        </tr>
        
        </tbody>

    </table>
    <div class="container flex my-2 justify-center mx-auto">
        
            <a href="/betwithchim" class="border  sub px-6 py-2 text-white hover:bg-blue-500  rounded-xl bg-blue-600" type="submit">Back</a>
        
    </div>
</div>