<% layout('layouts/boilerplate') %>

    <div class="container flex my-24 justify-center items-center mx-auto ">
       
      
      <div class="w-full max-w-xs">
        <% -include('./partials/flash') %> 
        <form action="/betwithchim/signup" method="post" class="bg-white shadow-2xl rounded px-8 pt-4 pb-8 mb-4">
          <p class=" text-lg text-center font-bold py-3 px-2">
            Welcome To BetWithChim
          </p>
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
              Username
            </label>
            <input class="shadow appearance-none border-gray-400 border focus:border-blue-400 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Username" name="username" required autocomplete="off">
          </div>
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
              Email
            </label>
            <input class="shadow appearance-none border  border-gray-400 focus:border-blue-400 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="email" name="email" placeholder="Email address" required autocomplete="off">
          </div>
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
              Password
            </label>
            <input class="shadow-lg appearance-none border border-gray-400 focus:border-blue-400 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" name="password" placeholder="******************" required>
          
          </div>
          
          <div class="mb-4">
            <label for="man">Male</label>
            <input type="radio" name="gender" id="man" value="man"  />
            <label for="woman">Female</label>
            <input type="radio" name="gender" id="woman" value="woman"  />

          </div>
          
          <div class="flex items-center justify-between">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="button">
              Sign In
            </button>
            <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="#">
              Forgot Password?
            </a>
          </div>
        </form>
        <p class="text-center text-gray-500 text-xs">
          &copy;2022 BetWithChim. All rights reserved.
        </p>
      </div>

    </div>
    