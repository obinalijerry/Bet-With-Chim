<% if(success && success.length) {%> 
    <div class="container bg-green-100 flex mx-auto  w-1/3 text-2xl justify-center border border-green-400 my-2 text-green-700 px-4 py-3 rounded relative" role="alert">
        
        <span class="block sm:inline"><%=success  %> </span>
        
    </div>
    
<% } %>     

<% if (error && error.length){ %> 
    <div class="bg-red-100 flex justify-center mx-auto w-1/3 border border-red-400 my-2 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold px-3">Error!!!</strong>
        <span class="block sm:inline"> <%= error %> </span>
        
      </div>
<% } %> 


<% if(comingsoon && comingsoon.length) {%> 
  <div class="container bg-green-100 flex mx-auto text-2xl justify-center items-center border border-green-400 my-2 text-green-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold text-3xl px-3">COMING SOON!! </strong>
      
      
    </div>
<% } %>  

<% if(subscriber && subscriber.length) {%> 
  <div class="container bg-green-100 flex  w-1/3 mx-auto text-2xl justify-center items-center border border-green-400 my-2 text-green-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold text-3xl px-3"><%= subscriber %> </strong>
      
      
    </div>
<% } %>  